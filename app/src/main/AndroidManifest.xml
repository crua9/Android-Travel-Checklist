<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.techreviewsandhelp.travelchecklist">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/home"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CheckListActivity"
            android:label="@string/title_activity_check_list" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.techreviewsandhelp.travelchecklist.MainActivity" />
        </activity>
        <activity
            android:name=".ResultCheckListActivity"
            android:label="@string/title_activity_list_result" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.techreviewsandhelp.travelchecklist.CheckListActivity" />
        </activity>
        <activity
            android:name=".HistoryActivity"
            android:label="@string/title_activity_history" >
        </activity>
        <activity
            android:name=".PersonListActivity"
            android:label="@string/title_activity_person_task_list" >
        </activity>
        <activity
            android:name=".CategoryListItems_Activity"
            android:label="@string/title_activity_category_list_items_" >
        </activity>
        <activity
            android:name=".IndividualPersonListActivity"
            android:label="@string/title_activity_individual_person_list" >
        </activity>
    </application>

</manifest>
